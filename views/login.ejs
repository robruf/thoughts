<% include ./partials/header %>

<div class="container">
    <form>
        <div class="form-group">
            <p>Sign up feature hasn't been implemented yet. <strong>Please log in using Google+</strong></p>
            <label>Email address</label>
            <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" disabled>
            <small class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="Password" disabled>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
        <a href="/auth/google" title="Google+" class="btn btn-googleplus btn-lg btn-block"><i class="fa fa-google-plus fa-fw"></i> Login with Google+</a>
    </form>
    <a href="/auth/signup">Not registered yet? Join us now!</a>
</div>


